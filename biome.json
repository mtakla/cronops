{
   "$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
   "vcs": {
      "enabled": true,
      "useIgnoreFile": true,
      "clientKind": "git"
   },
   "files": {
      "includes": ["src/**/*.ts", "tests/**/*.test.ts", "config/*.*"],
      "ignoreUnknown": false
   },
   "formatter": {
      "enabled": true,
      "lineWidth": 180,
      "indentStyle": "space",
      "indentWidth": 3
   },
   "linter": {
      "enabled": true,
      "rules": {
         "recommended": true
      }
   },
   "assist": {
      "enabled": true,
      "actions": {
         "source": {
            "organizeImports": "off"
         }
      }
   }
}
