{
   "name": "@mtakla/cronops",
   "version": "0.1.1-rc1.0",
   "description": "Cron-based cross-container server lifecycle management",
   "type": "module",
   "author": "nevereven",
   "license": "ISC",
   "bin": {
      "cronops": "./dist/server.js"
   },
   "main": "./dist/server.js",
   "types": "./dist/index.d.ts",
   "engines": {
      "node": ">=24"
   },
   "keywords": [
      "cron",
      "file",
      "glob",
      "copy",
      "move",
      "archive",
      "docker",
      "scheduler",
      "lifecycle",
      "cross-container"
   ],
   "export": {
      ".": {
         "types": "./dist/index.d.ts",
         "import": "./dist/index.js"
      }
   },
   "files": [
      "dist",
      "config",
      "LICENSE",
      "README.md"
   ],
   "dependencies": {
      "chalk": "5.6.2",
      "figlet": "1.9.4",
      "fs-extra": "11.3.3",
      "fast-glob": "3.3.3",
      "tar-fs": "3.1.1",
      "node-cron": "4.2.1",
      "p-limit": "7.2.0",
      "humanize-ms": "2.0.0",
      "date-fns": "4.1.0",
      "yaml": "2.8.2",
      "zod": "4.3.5"
   },
   "devDependencies": {
      "@biomejs/biome": "^2.3.6",
      "@vitest/coverage-v8": "^4.0.14",
      "@types/fs-extra": "^11.0.4",
      "@types/tar-fs": "2.0.4",
      "@types/node": "^25.0.3",
      "typescript": "^5.9.3",
      "vitest": "^4.0.14"
   },
   "scripts": {
      "check": "biome check",
      "check:fix": "biome check --write",
      "test": "vitest run --coverage",
      "clean": "rm -rf dist",
      "dev": "tsc && node ./dist/server.js",
      "build": "npm run clean && tsc",
      "start": "node ./dist/server.js",
      "loadtest": "tsc && node ./dist/test/loadtest.js",
      "docker": "docker build --output type=docker,name=cronops.tar --tag nevereven/cronops:latest --tag nevereven/cronops:0.1 ."
   }
}
