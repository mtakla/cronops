{
   "name": "@mtakla/cronops",
   "version": "0.1.1-rc3",
   "description": "Cron-based cross-container server lifecycle management",
   "type": "module",
   "author": "nevereven",
   "license": "ISC",
   "bin": {
      "cronops": "dist/server.js"
   },
   "main": "./dist/server.js",
   "types": "./dist/index.d.ts",
   "engines": {
      "node": ">=24"
   },
   "keywords": [
      "cron",
      "file",
      "glob",
      "exec",
      "copy",
      "move",
      "archive",
      "docker",
      "scheduler",
      "lifecycle",
      "cross-container"
   ],
   "export": {
      ".": {
         "types": "./dist/index.d.ts",
         "import": "./dist/index.js"
      }
   },
   "files": [
      "dist",
      "config",
      "LICENSE",
      "README.md"
   ],
   "dependencies": {
      "chalk": "5.6.2",
      "date-fns": "4.1.0",
      "fast-glob": "3.3.3",
      "figlet": "1.10.0",
      "fs-extra": "11.3.3",
      "p-limit": "7.3.0",
      "node-cron": "4.2.1",
      "parse-duration": "2.1.5",
      "tar-fs": "3.1.1",
      "yaml": "2.8.2",
      "zod": "4.3.6",
      "fastify": "5.7.4"
   },
   "devDependencies": {
      "@biomejs/biome": "^2.3.6",
      "@types/fs-extra": "^11.0.4",
      "@types/node": "^25.0.3",
      "@types/shell-quote": "^1.7.5",
      "@types/tar-fs": "2.0.4",
      "@vitest/coverage-v8": "^4.0.14",
      "typescript": "^5.9.3",
      "typedoc": "^0.28.16",
      "tsx": "^4.21.0",
      "vitest": "^4.0.14"
   },
   "scripts": {
      "check": "biome check",
      "check:fix": "biome check --write",
      "test": "vitest run",
      "typedoc": "typedoc",
      "coverage": "vitest run --coverage",
      "loadtest": "tsc && node ./dist/tests/loadtest.js",
      "clean": "rm -rf dist",
      "build": "tsc",
      "dev": "tsc && node ./dist/server.js",
      "docker:build": "docker build --load --target app -t ghcr.io/mtakla/cronops:latest .",
      "docker:build-docs": "docker build --load --target docs -t ghcr.io/mtakla/cronops-docs:latest ."
   }
}
